<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:padding="15dp">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="artist_text"
        android:id="@+id/artist_text"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="year_text"
        android:id="@+id/year_text"
        android:layout_weight="1"/>

</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="release_title"
        android:id="@+id/release_title"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="arranger_text"
        android:id="@+id/arranger_text"
        android:layout_weight="1"/>
</LinearLayout>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/track_recycler_view"
        android:layout_width="306dp"
        android:layout_height="252dp">

    </android.support.v7.widget.RecyclerView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="track_text"
    android:id="@+id/track_text"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="genre_text"
    android:id="@+id/genre_text"
    android:layout_weight="1"/>
</LinearLayout>