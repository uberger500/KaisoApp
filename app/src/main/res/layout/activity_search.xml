<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#eeeeee">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Search Archive"
        android:id="@+id/search_view"
        android:text="@string/search_view_text"
        android:padding="30dp"
        android:maxLength="6"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_search_info"
        android:id="@+id/subtitle_search_info"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Search subtitle"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artist_edit_text"
        tools:text="artist_edit_text"
        android:maxLength="15"
        android:padding="30dp"
        android:hint="@string/artist_name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/year_edit_text"
        tools:text="year_edit_text"
        android:maxLength="4"
        android:padding="30dp"
        android:hint="@string/year_of_release"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_edit_text"
        tools:text="title_edit_text"
        android:maxLength="20"
        android:padding="30dp"
        android:hint="@string/release_title"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/track_edit_text"
        tools:text="track_edit_text"
        android:maxLength="30"
        android:padding="30dp"
        android:hint="@string/track_title"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/arranger_edit_text"
        tools:text="arranger_edit_text"
        android:maxLength="20"
        android:padding="30dp"
        android:hint="@string/arranger"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/genre_edit_text"
        tools:text="genre_edit_text"
        android:maxLength="10"
        android:padding="30dp"
        android:hint="@string/genre"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:id="@+id/search_submit_button"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>